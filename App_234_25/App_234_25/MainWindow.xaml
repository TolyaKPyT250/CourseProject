<Window x:Class="App_234_25.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_234_25"
        mc:Ignorable="d"
        Title="Редактор расписания" Height="580" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Выберите группу: " VerticalAlignment="Center"/>
            <ComboBox x:Name="cbGroups" Width="150" DisplayMemberPath="GroupName" SelectionChanged="cbGroups_SelectionChanged"/>
            <Button Content="Добавить пару" Click="btnOpenAdd_Click" Width="130" HorizontalContentAlignment="Center" Padding="1,1,2,1"/>
            <Button Content="Удалить пару" Click="btnDelete_Click" Width="130" HorizontalContentAlignment="Center" Padding="1, 1,2,1"/>
        </StackPanel>
        <DataGrid x:Name="dgSchedule" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="День" Binding="{Binding DayOfWeek}" Width="100"/>
                <DataGridTextColumn Header="Пара" Binding="{Binding LessonNumber}" Width="50"/>
                <DataGridTextColumn Header="Предмет" Binding="{Binding SubjectName}" Width="*"/>

                <DataGridTextColumn Header="Преподаватель" Binding="{Binding Lecturer.FullName}" Width="*"/>
                <DataGridTextColumn Header="Аудитория" Binding="{Binding Room.RoomNumber}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
