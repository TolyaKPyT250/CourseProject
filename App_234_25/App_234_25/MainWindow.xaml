<Window x:Class="App_234_25.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор расписания" Height="600" Width="1000" 
        WindowStartupLocation="CenterScreen"
        Background="#F4F4F9" AllowsTransparency="True" WindowStyle="None"
        Icon="/Resources/Icon.ico">

    <Border BorderBrush="#44000000" BorderThickness="1" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#8A2BE2" MouseDown="TitleBar_MouseDown">
                <TextBlock Text="РЕДАКТОР РАСПИСАНИЯ" VerticalAlignment="Center" Margin="15,0,0,0" 
                           Foreground="White" FontWeight="Bold" FontSize="12"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="—" Width="45" Height="40" Background="#33000000" Foreground="White" BorderThickness="0" Click="Minimize_Click"/>
                    <Button Content="✕" Width="45" Height="40" Background="#33000000" Foreground="White" BorderThickness="0" Click="Close_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E81123"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Background="White" Margin="20,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="ГРУППА:" VerticalAlignment="Center" FontWeight="Bold" Foreground="#666" Margin="0,0,10,0" FontSize="11"/>
                    <ComboBox x:Name="cbGroups" Width="180" Height="35" VerticalContentAlignment="Center"
                              DisplayMemberPath="GroupName" SelectionChanged="cbGroups_SelectionChanged"
                              Background="#E5E5E5" BorderBrush="#BBB"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="2">
                    
                    <Button Content="⚡ ГЕНЕРАЦИЯ" Click="btnGenerate_Click" Width="110" Height="35" 
                            Background="#FF8C00" Foreground="White" BorderThickness="0" Cursor="Hand" Margin="0,0,5,0"/>
                    <Button Content="🗑 ОЧИСТИТЬ" Click="btnClearAll_Click" Width="100" Height="35" 
                            Background="#666" Foreground="White" BorderThickness="0" Cursor="Hand" Margin="0,0,10,0"/>
                    <Button Content="⚙ ПРЕДМЕТЫ" Click="btnOpenSubjects_Click" Width="100" Height="35" 
        Background="#555" Foreground="White" BorderThickness="0" Margin="0,0,5,0"/>
                    <Button Content="⚙ КАБИНЕТЫ" Click="btnOpenRooms_Click" Width="100" Height="35" 
Background="#555" Foreground="White" BorderThickness="0" Margin="0,0,5,0"/>
                    <Button Content="+ ДОБАВИТЬ ПАРУ" Click="btnOpenAdd_Click" Width="150" Height="35" 
                            Background="#222" Foreground="White" BorderThickness="0" Cursor="Hand" Margin="0,0,10,0"/>
                    <Button Content="✕ УДАЛИТЬ ПАРУ" Click="btnDelete_Click" Width="150" Height="35" 
                            Background="#E81123" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                    
                </StackPanel>
            </Grid>

            <Border Grid.Row="2" Margin="20,0,20,20" BorderBrush="#DDD" BorderThickness="1">
                <DataGrid x:Name="dgSchedule" AutoGenerateColumns="False" IsReadOnly="True" 
                          GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#EEE"
                          HeadersVisibility="Column" Background="White" BorderThickness="0"
                          RowHeight="40" FontSize="13" Foreground="#333">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F8F8F8"/>
                            <Setter Property="Foreground" Value="#555"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#DDD"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ДАТА" Binding="{Binding LessonDate, StringFormat={}{0:dd.MM.yyyy}}" Width="100"/>
                        <DataGridTextColumn Header="ДЕНЬ" Binding="{Binding DayOfWeek}" Width="120"/>
                        <DataGridTextColumn Header="№" Binding="{Binding LessonNumber}" Width="50"/>
                        <DataGridTextColumn Header="ПРЕДМЕТ" Binding="{Binding SubjectName}" Width="2*"/>
                        <DataGridTextColumn Header="ПРЕПОДАВАТЕЛЬ" Binding="{Binding Lecturer.FullName}" Width="2*"/>
                        <DataGridTextColumn Header="АУДИТОРИЯ" Binding="{Binding Room.RoomNumber}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Border>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
</Window>