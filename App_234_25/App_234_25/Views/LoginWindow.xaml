<Window x:Class="App_234_25.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="600" Width="900" 
        WindowStartupLocation="CenterScreen"
        Background="#8A2BE2" 
        AllowsTransparency="True" WindowStyle="None">

    <Border Background="#8A2BE2" BorderBrush="#44000000" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.1*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="Transparent" MouseDown="TitleBar_MouseDown">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="—" Width="45" Height="40" Background="#33000000" Foreground="White" BorderThickness="0" Click="Minimize_Click"/>
                    <Button Content="✕" Width="45" Height="40" Background="#33000000" Foreground="White" BorderThickness="0" Click="Close_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E81123"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <StackPanel x:Name="LeftPanel" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="60,0,20,0" Opacity="0">
                <TextBlock Text="Добро пожаловать!" FontSize="46" FontWeight="Light" Foreground="White" TextWrapping="Wrap"/>
                <TextBlock Text="Войдите для использования Редактора" FontSize="18" Foreground="#CCC" Margin="0,15,0,0" TextWrapping="Wrap"/>
                <StackPanel.RenderTransform>
                    <TranslateTransform x:Name="TextTranslate" X="-20"/>
                </StackPanel.RenderTransform>
            </StackPanel>
            <TextBlock x:Name="AuthorText" 
           Grid.Row="1" Grid.Column="0" 
           Text="Проект сделал: Ш.А.Р." 
           FontSize="12" Foreground="#88FFFFFF" 
           VerticalAlignment="Bottom" HorizontalAlignment="Left" 
           Margin="20,0,0,20" Opacity="0">
                <TextBlock.RenderTransform>
                    <TranslateTransform x:Name="AuthorTranslate" Y="20"/>
                </TextBlock.RenderTransform>
            </TextBlock>

            <Border x:Name="LoginCard" Grid.Row="1" Grid.Column="1" 
                    Background="White" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Width="350" Padding="40" Opacity="0">
                <Border.Resources>
                    <Storyboard x:Key="ErrorAnimation">
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="StatusTranslate" Storyboard.TargetProperty="X">
                            <EasingDoubleKeyFrame KeyTime="0:0:0.05" Value="-10"/>
                            <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="10"/>
                            <EasingDoubleKeyFrame KeyTime="0:0:0.15" Value="-10"/>
                            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="10"/>
                            <EasingDoubleKeyFrame KeyTime="0:0:0.25" Value="0"/>
                        </DoubleAnimationUsingKeyFrames>
                        <ColorAnimation Storyboard.TargetName="txtLogin" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                        To="Red" Duration="0:0:0.2" AutoReverse="True"/>
                        <ColorAnimation Storyboard.TargetName="txtPassword" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                        To="Red" Duration="0:0:0.2" AutoReverse="True"/>
                    </Storyboard>
                </Border.Resources>

                <StackPanel>
                    <TextBlock Text="АВТОРИЗАЦИЯ" FontSize="20" FontWeight="Bold" Foreground="#222" Margin="0,0,0,30"/>

                    <TextBlock Text="ЛОГИН" FontSize="11" FontWeight="Bold" Foreground="#888" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtLogin" FontSize="16" Height="38" Background="#E5E5E5" Foreground="#333" BorderBrush="#BBB" BorderThickness="1" Padding="5,5"/>

                    <TextBlock Text="ПАРОЛЬ" FontSize="11" FontWeight="Bold" Foreground="#888" Margin="0,20,0,5"/>
                    <PasswordBox x:Name="txtPassword" FontSize="16" Height="38" Background="#E5E5E5" Foreground="#333" BorderBrush="#BBB" BorderThickness="1" Padding="5,5" KeyDown="txtPassword_KeyDown"/>

                    <Button Content="ВОЙТИ" Click="SignIn_Click" Margin="0,35,0,0" Height="45" Cursor="Hand" Background="#222" Foreground="White" BorderThickness="0"/>

                    <TextBlock x:Name="StatusText" Text="Статус: Ожидание" Foreground="#AAA" Margin="0,20,0,0" HorizontalAlignment="Center" FontSize="11">
                        <TextBlock.RenderTransform>
                            <TranslateTransform x:Name="StatusTranslate" X="0"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>
    </Border>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="AuthorText" Storyboard.TargetProperty="Opacity" 
                 From="0" To="1" Duration="0:0:1" BeginTime="0:0:0.8"/>
                    <DoubleAnimation Storyboard.TargetName="AuthorTranslate" Storyboard.TargetProperty="Y" 
                 From="20" To="0" Duration="0:0:1" BeginTime="0:0:0.8">
                        <DoubleAnimation.EasingFunction>
                            <PowerEase EasingMode="EaseOut" Power="3"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <ThicknessAnimation Storyboard.TargetName="LoginCard" Storyboard.TargetProperty="Margin" From="0,100,0,-100" To="0,0,0,0" Duration="0:0:0.7"/>
                    <DoubleAnimation Storyboard.TargetName="LoginCard" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
                    <DoubleAnimation Storyboard.TargetName="LeftPanel" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.8" BeginTime="0:0:0.3"/>
                    <DoubleAnimation Storyboard.TargetName="TextTranslate" Storyboard.TargetProperty="X" From="-30" To="0" Duration="0:0:0.8" BeginTime="0:0:0.3"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
</Window>