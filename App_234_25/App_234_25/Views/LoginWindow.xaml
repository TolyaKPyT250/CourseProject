<Window x:Class="App_234_25.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_234_25.Views"
        mc:Ignorable="d"
        Title="Авторизация" Height="250" Width="300" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="txtLogin" Margin="0,5"/>
            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="txtPassword" Margin="0,5"/>
            <Button Content="Войти" Click="SignIn_Click" Margin="0,10" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
