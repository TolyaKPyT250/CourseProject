<Window x:Class="App_234_25.Views.GenerateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_234_25.Views"
        mc:Ignorable="d"
        Title="Параметры для генерации" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Мин. пар в день для группы:"/>
            <Slider x:Name="sldMin" Minimum="1" Maximum="3" IsSnapToTickEnabled="True" TickFrequency="1" Value="1"/>
            <TextBlock Text="{Binding ElementName=sldMin, Path=Value, StringFormat='Выбрано: {0}'}" HorizontalAlignment="Right"/>

            <TextBlock Text="Макс. пар в день для группы:" Margin="0,10,0,0"/>
            <Slider x:Name="sldMax" Minimum="4" Maximum="6" IsSnapToTickEnabled="True" TickFrequency="1" Value="4"/>
            <TextBlock Text="{Binding ElementName=sldMax, Path=Value, StringFormat='Выбрано: {0}'}" HorizontalAlignment="Right"/>

            <Button Content="Генерировать" Click="Accept_Click" Margin="0,20,0,0" Height="30" Background="LightBlue"/>
        </StackPanel>
    </Grid>
</Window>
