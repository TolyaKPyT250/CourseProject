<Window x:Class="App_234_25.MainWindow"

        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        Title="Редактор расписания" Height="600" Width="1000" 

        WindowStartupLocation="CenterScreen"

        Background="#F4F4F9" AllowsTransparency="True" WindowStyle="None"

        Icon="/Resources/Icon.ico">



    <Border BorderBrush="#44000000" BorderThickness="1" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#8A2BE2" MouseDown="TitleBar_MouseDown">
                <TextBlock Text="РЕДАКТОР РАСПИСАНИЯ" VerticalAlignment="Center" Margin="15,0,0,0" 
                           Foreground="White" FontWeight="Bold" FontSize="12"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="—" Width="45" Height="40" Background="#33000000" Foreground="White" BorderThickness="0" Click="Minimize_Click"/>
                    <Button Content="✕" Width="45" Height="40" Background="#33000000" Foreground="White" BorderThickness="0" Click="Close_Click"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Margin="0,0,15,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="ГРУППА:" VerticalAlignment="Center" FontWeight="Bold" Foreground="#666" Margin="0,0,10,0" FontSize="11"/>
                        <ComboBox x:Name="cbGroups" Width="250" Height="35" VerticalContentAlignment="Center"
                                  DisplayMemberPath="GroupName" SelectionChanged="cbGroups_SelectionChanged"
                                  Background="#E5E5E5"/>
                    </StackPanel>

                    <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="1">
                        <DataGrid x:Name="dgSchedule" AutoGenerateColumns="False" IsReadOnly="True" 
                                  HeadersVisibility="Column" Background="White" BorderThickness="0"
                                  RowHeight="40" FontSize="13" Foreground="#333">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ДАТА" Binding="{Binding LessonDate, StringFormat={}{0:dd.MM.yyyy}}" Width="90"/>
                                <DataGridTextColumn Header="ДЕНЬ" Binding="{Binding DayOfWeek}" Width="90"/>
                                <DataGridTextColumn Header="№" Binding="{Binding LessonNumber}" Width="35"/>
                                <DataGridTextColumn Header="ПРЕДМЕТ" Binding="{Binding SubjectName}" Width="1.5*"/>
                                <DataGridTextColumn Header="ПРЕПОДАВАТЕЛЬ" Binding="{Binding Lecturer.FullName}" Width="1.5*"/>
                                <DataGridTextColumn Header="АУДИТОРИЯ" Binding="{Binding Room.RoomNumber}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>

                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                    <TextBlock Text="УПРАВЛЕНИЕ" FontWeight="Bold" Foreground="#8A2BE2" Margin="0,0,0,10" HorizontalAlignment="Center"/>

                    <Button Content="⚡ ГЕНЕРАЦИЯ" Click="btnGenerate_Click" Height="45" Margin="0,0,0,10"
                            Background="#FF8C00" Foreground="White" BorderThickness="0" FontWeight="Bold"/>

                    <Button Content="+ ДОБАВИТЬ ПАРУ" Click="btnOpenAdd_Click" Height="40" Margin="0,0,0,10"
                            Background="#222" Foreground="White" BorderThickness="0"/>

                    <Button Content="✕ УДАЛИТЬ ПАРУ" Click="btnDelete_Click" Height="40" Margin="0,0,0,25"
                            Background="#E81123" Foreground="White" BorderThickness="0"/>

                    <Separator Margin="0,0,0,25" Background="#DDD"/>

                    <Button Content="⚙ ПРЕДМЕТЫ/ПРЕПОДАВАТЕЛИ" Click="btnOpenSubjects_Click" Height="35" Margin="0,0,0,10"
                            Background="#555" Foreground="White" BorderThickness="0"/>

                    <Button Content="⚙ КАБИНЕТЫ" Click="btnOpenRooms_Click" Height="35" Margin="0,0,0,10"
                            Background="#555" Foreground="White" BorderThickness="0"/>
                    
                    <Button Content="⚙ ГРУППЫ" Click="btnOpenGroups_Click" Height="35" Margin="0,0,0,10"
            Background="#555" Foreground="White" BorderThickness="0"/>

                    <Button Content="🗑 ОЧИСТИТЬ ВСЁ" Click="btnClearAll_Click" Height="35" VerticalAlignment="Bottom"
                            Background="#666" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>



    <Window.Triggers>

        <EventTrigger RoutedEvent="Window.Loaded">

            <BeginStoryboard>

                <Storyboard>

                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>

                </Storyboard>

            </BeginStoryboard>

        </EventTrigger>

    </Window.Triggers>

</Window>