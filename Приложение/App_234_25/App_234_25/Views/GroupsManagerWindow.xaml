<Window x:Class="App_234_25.Views.GroupsManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_234_25.Views"
        mc:Ignorable="d"
        Title="Управление группами" Height="400" Width="500" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ListBox x:Name="lbGroups" Grid.Row="0" DisplayMemberPath="GroupName" 
                 SelectionChanged="lbGroups_SelectionChanged"/>

            <UniformGrid Grid.Row="1" Columns="2" Margin="0,10,0,0">
                <Button Content="ДОБАВИТЬ" Click="Add_Click" Height="30" Margin="0,0,5,0" 
                    Background="#2E8B57" Foreground="White" FontWeight="Bold"/>
                <Button Content="УДАЛИТЬ" Click="Delete_Click" Height="30" Margin="5,0,0,0" 
                    Background="IndianRed" Foreground="White" FontWeight="Bold"/>
            </UniformGrid>
        </Grid>

        <StackPanel Grid.Column="1">
            <TextBlock Text="НАЗВАНИЕ ГРУППЫ:" FontWeight="Bold"/>
            <TextBox x:Name="txtGroupName" Margin="0,5,0,15" Padding="5"/>

            <TextBlock Text="ПРОФИЛЬ (Description):" FontWeight="Bold"/>
            <TextBox x:Name="txtGroupDesc" Margin="0,5,0,5" Padding="5"/>
            <TextBlock FontSize="10" Foreground="Gray">Пример: ИТ, ДРУГОЕ</TextBlock>

            <Button Content="СОХРАНИТЬ" Click="Save_Click" Margin="0,30,0,0" Height="35" 
                Background="#8A2BE2" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
