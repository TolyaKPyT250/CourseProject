<Window x:Class="App_234_25.Views.LecturerSubjectsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройка предметов преподавателей" Height="350" Width="500" WindowStartupLocation="CenterOwner"
        Icon="/Resources/Icon.ico">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="ПРЕПОДАВАТЕЛЬ:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ListBox x:Name="lbLecturers" Height="220" DisplayMemberPath="FullName" 
                     SelectionChanged="lbLecturers_SelectionChanged"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Text="СПИСОК ПРЕДМЕТОВ (через ;):" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtSubjects" Height="100" TextWrapping="Wrap" AcceptsReturn="True" 
                     VerticalContentAlignment="Top" Padding="5"/>
            <TextBlock Text="Пример: Математика;Физика;История" FontSize="10" Foreground="Gray" Margin="0,5,0,0"/>

            <Button Content="СОХРАНИТЬ" Click="Save_Click" Margin="0,20,0,0" Height="35" 
                    Background="#8A2BE2" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>