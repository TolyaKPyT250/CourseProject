<Window x:Class="App_234_25.Views.GenerateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_234_25.Views"
        mc:Ignorable="d"
        Title="Параметры для генерации" Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="/Resources/Icon.ico">

    <Grid Background="#8A2BE2">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Параметры генерации" 
                       FontSize="18" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,15" 
                       Foreground="White"/>

            <Border Background="#D9D9D9" Padding="20" Width="300" CornerRadius="5">
                <StackPanel>

                    <TextBlock Text="Мин. пар в день для группы:" Foreground="Black" Margin="0,0,0,5"/>
                    <Slider x:Name="sldMin" 
                            Minimum="1" Maximum="3" 
                            IsSnapToTickEnabled="True" 
                            TickFrequency="1" Value="1" 
                            Margin="0,5"/>
                    <TextBlock Text="{Binding ElementName=sldMin, Path=Value, StringFormat='Выбрано: {0}'}" 
                               HorizontalAlignment="Right" 
                               FontSize="11" Foreground="#444444"/>

                    <TextBlock Text="Макс. пар в день для группы:" Foreground="Black" Margin="0,15,0,5"/>
                    <Slider x:Name="sldMax" 
                            Minimum="4" Maximum="6" 
                            IsSnapToTickEnabled="True" 
                            TickFrequency="1" Value="4" 
                            Margin="0,5"/>
                    <TextBlock Text="{Binding ElementName=sldMax, Path=Value, StringFormat='Выбрано: {0}'}" 
                               HorizontalAlignment="Right" 
                               FontSize="11" Foreground="#444444"/>

                    <Button Content="Генерировать" 
                            Click="Accept_Click" 
                            Margin="0,25,0,0" 
                            Height="35" 
                            Background="#BDBDBD" 
                            BorderThickness="0"
                            FontSize="14"
                            Cursor="Hand"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</Window>